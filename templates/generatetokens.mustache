{{!
    @template enrol_token/generatetokens

    This template renders the template content for generate enrol tokens.

    Example context (json):
    {
        "enrolid": 1
    }
}}

<div>
    <hr />
    <h3>{{#str}}generatetokens, enrol_token{{/str}}</h3>
    <form action="{{{urlbase}}}/enrol/token/tokens.php" method="post">
        <input type="hidden" name="sesskey" value="{{sesskey}}">
        <input type="hidden" name="enrolid" value="{{enrolid}}">
        <input type="number" name="amount" value="1" size="3" min="1" max="100">
        <input type="submit" value="{{#str}}generate, enrol_token{{/str}}">
    </form>
</div>
